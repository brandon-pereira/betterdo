{
  "name": "api-v2",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start:production": "node ./dist/src/index.js",
    "build": "tsc",
    "start": "tsx watch -r dotenv/config src/index.ts",
    "lint": "eslint . && tsc --noemit",
    "test": "vitest",
    "push": "NODE_OPTIONS='--import tsx' drizzle-kit push",
    "generate-auth": "npx @better-auth/cli generate --output ./src/schema/auth.ts && npx prettier --write ./src/schema/auth.ts"
  },
  "dependencies": {
    "@better-auth/passkey": "^1.4.18",
    "@hono/node-server": "^1.19.9",
    "@hono/zod-validator": "^0.7.6",
    "better-auth": "^1.4.18",
    "dotenv": "^17.2.4",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.8",
    "pg": "^8.18.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.4.18",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "^0.31.8"
  }
}

<style define:vars={{ noiseUrl }}>
  @property --palette-rotate {
    syntax: "<angle>";
    initial-value: 0deg;
    inherits: false;
  }

  .title {
    font-size: 2.5rem;
    text-wrap: balance;
  }
  .rainbow-text {
    background: linear-gradient(
      to right,
      #f06b6b,
      orange,
      yellow,
      green,
      #57c4ff,
      #b44bff,
      violet
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .content {
    /* flex- */
  }
  .container {
    display: flex;
    max-width: var(--max-width);
    margin: 2rem auto 4rem;
    padding: 0 2rem;
    gap: 2rem;
    justify-content: space-between;
    align-items: center;
  }
  .palette-container {
    position: relative;
    --size: 400px;
    /* overflow: hidden; */
    width: var(--size);
    height: var(--size);
    border-radius: 50%;
    flex-shrink: 0;
  }
  .palette {
    background-blend-mode: multiply;
    background-image: conic-gradient(
        from var(--palette-rotate),
        /* // nice rainbow */ red,
        orange,
        yellow,
        green,
        #264fc9,
        indigo,
        violet,
        red
      ),
      var(--noiseUrl);
    width: var(--size);
    height: var(--size);
    border-radius: 50%;
    background-position: center;
    animation: rotate 10s linear infinite;
    position: absolute;
    &.blur {
      z-index: -1;
      inset: -50px;
      top: 20px;
      width: calc(var(--size) + 100px);
      height: calc(var(--size) + 100px);
      filter: blur(50px) brightness(0.5);
    }
  }

  .palette svg {
    position: absolute;
    top: 50%;
    /* the 3px is to help account for the little slash on the right */
    left: calc(50% + 3px);
    width: 90%;
    height: 90%;
    transform: translate(-50%, -50%);
    filter: drop-shadow(1px 1px rgba(225, 225, 225, 0.2));
  }

  @keyframes rotate {
    from {
      --palette-rotate: 0deg;
    }
    to {
      --palette-rotate: 360deg;
    }
  }
</style>

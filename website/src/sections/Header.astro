---
import { Image } from "astro:assets";
import BetterDo from "../svgs/betterdo.svg";
import Button from "../components/Button.astro";
import { LAUNCH_URL } from "../constants";
---

<header>
  <div class="brand">
    <Image class="logo" src={BetterDo} alt="BetterDo logo" />
    <h1 class="title">Better<span>Do.</span></h1>
  </div>
  <nav>
    <ul>
      <li><a href="/about">About</a></li>
      <li><a href="/features">Features</a></li>
      <li><a href="/pricing">Pricing</a></li>
      <li><a href="/contact">Contact</a></li>
    </ul>
  </nav>
  <Button href={LAUNCH_URL}>Launch</Button>
</header>

<style>
  header {
    display: flex;
    padding: 2rem 0;
    max-width: var(--max-width);
    margin: 0 auto;
    align-items: center;
    justify-content: space-between;
    color: var(--core-color);
  }
  .brand {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .title {
    margin: 0;
    font-weight: 400;
    font-size: 2rem;
    & :global(span) {
      font-weight: 700;
    }
  }
  .logo {
    width: 60px;
    height: 60px;
  }
  nav :global(ul) {
    display: flex;
    list-style: none;
    gap: 1.5rem;
    margin: 0;
    padding: 0;
  }
  nav :global(li) {
    font-size: 1.2rem;
  }
  nav :global(a) {
    text-decoration: none;
    color: inherit;
  }
</style>

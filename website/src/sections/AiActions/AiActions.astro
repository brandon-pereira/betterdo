---
import ScrollText from "../../components/ScrollText.astro";
import Noise from "../noise.svg";
const noiseUrl = `url(${Noise.src})`;
---

<div class="container">
  <div>
    <h2 class="title">Leverage AI to automate your life</h2>
    <h3 class="subtitle">Get back to the things that matter</h3>
    <div class="actions">
      &#x201CRemind me to <ScrollText
        text={[
          "take out the trash",
          "renew my drivers license",
          "buy my wife flowers",
        ]}
      /> every <ScrollText
        text={[
          "every 3 days",
          "every year on October 31st",
          "every year August 21st",
        ]}
      />.&#x201D
    </div>
  </div>
</div>

<style define:vars={{ noiseUrl }}>
  .container {
    --padding: 15px;
    position: relative;
    margin: 0 auto;
    padding: calc(var(--padding) * 4) calc(var(--padding) * 2);
    overflow: hidden;
    max-width: var(--max-width);
    &:after {
      content: "";
      position: absolute;
      top: 50%;
      left: 50%;
      translate: -50% -50%;
      background-image: linear-gradient(-40deg, red, blue);
      z-index: -2;
      filter: blur(100px);
      animation: rotate 10s linear infinite;
      background-size: 100rem 100rem;
      height: 1000px;
      width: 1000px;
      transform-origin: center;
    }

    &:before {
      border-radius: 4rem;
      content: "";
      position: absolute;
      inset: var(--padding);
      z-index: -1;
      background: var(--core-background);
    }

    display: flex;
    justify-content: center;
    box-sizing: border-box;
    align-items: center;
    border-radius: calc(4rem + var(--padding));
    /* height: 20rem; */
    /* font-family: "DM Serif Display", serif; */
    font-size: 2rem;
    line-height: 2.5rem;
    text-align: center;
  }

  .title {
    font-size: 2.5rem;
    margin: 0;
  }

  .subtitle {
    font-size: 1rem;
    margin: 0;
  }

  .actions {
    height: 5rem;
    text-wrap: balance;
    width: 800px;
  }
  @keyframes rotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }
</style>
